{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    // --- FIX FOR DYNAMIC IMPORT ERRORS ---
    // This tells the TypeScript compiler to use a modern module system 
    // that supports `import()` for lazy loading (React.lazy).
    "module": "esnext", 
    "target": "es2020"
    // -------------------------------------
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.jsx",             
    "./src/types/react-native-web.d.ts",
    "src/Components/Personal/Finance/PersonalTransactionsWidget.jsx",
    "src/Components/Personal/Goal/GoalListsWidget.jsx",
    "nativewind-env.d.ts",
    "src/Pages/Auth/VerifyEmail.jsx", 
    "src/Components/Company/Employees/CompanyEmployeeListWidget.jsx", 
    "src/Components/Admin/Entities/EntityManagementWidget.jsx" 
    // Removed the duplicate "src/Components/Admin/Entities/EntityManagementWidget.jsx"
  ],
  "exclude": [
    "node_modules",
    "src/config/firebase-config"
  ]
}